<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/main_ll"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- First Card -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/carView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                cardView:cardCornerRadius="8dp"
                cardView:cardElevation="8dp"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/demo_property"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            cardView:layout_constraintStart_toStartOf="parent"
                            cardView:layout_constraintTop_toTopOf="parent"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextView_black"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font_opensans_regular"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/space20"
                            android:text="@string/not_have_account"
                            android:layout_marginBottom="@dimen/_20sdp"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_submit"
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginHorizontal="@dimen/_15ssp"
                        android:fontFamily="@font/font_opensans_semibold"
                        android:layout_margin="@dimen/space8"
                        android:background="@drawable/btn_bg_theme"
                        android:text="Add New Property"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Card -->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/carView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                cardView:cardCornerRadius="8dp"
                cardView:cardElevation="8dp"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/image2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/demo_cust"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            cardView:layout_constraintStart_toStartOf="parent"
                            cardView:layout_constraintTop_toTopOf="parent"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextView_black"
                            android:layout_gravity="center"
                            android:fontFamily="@font/font_opensans_regular"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/space20"
                            android:text="@string/not_have_account"
                            android:layout_marginBottom="@dimen/_20sdp"/>


                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_submit1"
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_weight="0"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginHorizontal="@dimen/_15ssp"
                        android:fontFamily="@font/font_opensans_semibold"
                        android:layout_margin="@dimen/space8"
                        android:background="@drawable/btn_bg_theme"
                        android:text="Add New Customer"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</layout>