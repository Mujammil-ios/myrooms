<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll1"
            app:layout_constraintTop_toTopOf="@id/view_root"
            app:layout_constraintRight_toRightOf="@id/view_root"
            app:layout_constraintLeft_toLeftOf="@id/view_root"
            app:layout_constraintBottom_toTopOf="@id/ll2" android:orientation="horizontal">

                <EditText
                    android:id="@+id/otpET1"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:focusable="true"
                    android:inputType="number"
                    android:layout_margin="@dimen/_10sdp"
                    android:cursorVisible="true"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/otpET2"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_margin="@dimen/_10sdp"

                    android:gravity="center"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/otpET3"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_margin="@dimen/_10sdp"

                    android:gravity="center"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/otpET4"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:maxLength="1"
                    android:layout_margin="@dimen/_10sdp"

                    android:gravity="center"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/otpET5"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:layout_margin="@dimen/_10sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/otpET6"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:maxLength="1"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll2"
                app:layout_constraintTop_toBottomOf="@id/ll1"
                app:layout_constraintRight_toRightOf="@id/ll1"
                app:layout_constraintLeft_toLeftOf="@id/ll1"
                app:layout_constraintBottom_toBottomOf="@id/view_root"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/font_opensans_semibold"
                    android:layout_margin="@dimen/space8"
                    android:background="@drawable/btn_bg_theme"
                    android:text="@string/sign_up"/>
            </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
